{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["<rootDir>/shared", "<rootDir>/lambdas"],
  "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "collectCoverageFrom": [
    "shared/**/*.ts",
    "lambdas/**/*.ts",
    "!**/*.d.ts"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov", "html"]
}
